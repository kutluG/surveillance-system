{
  "name": "surveillance-mobile-app",
  "version": "1.0.0",
  "description": "AI-Powered Surveillance System Mobile App",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:production": "detox test --configuration android.emu.release",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:integration": "jest --testMatch='**/integration/**/*.test.js'",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "clean": "react-native clean",
    "reset": "react-native reset-cache",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "build:android:clean": "cd android && ./gradlew clean",
    "build:ios": "cd ios && xcodebuild -workspace SurveillanceApp.xcworkspace -scheme SurveillanceApp -configuration Release",
    "build:ios:archive": "cd ios && xcodebuild archive -workspace SurveillanceApp.xcworkspace -scheme SurveillanceApp -configuration Release",
    "deploy:android": "./scripts/build-android.sh",
    "deploy:ios": "./scripts/build-ios.sh",
    "prepare:release": "npm run test && npm run lint",
    "prerelease": "npm run prepare:release",
    "release:android": "npm run prerelease && npm run deploy:android",
    "release:ios": "npm run prerelease && npm run deploy:ios",
    "release:all": "npm run prerelease && npm run deploy:android && npm run deploy:ios"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.2",
    "hls-parser": "^0.13.5",
    "moment": "^2.29.4",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-aes-crypto": "^3.2.1",
    "react-native-async-storage": "@react-native-async-storage/async-storage",
    "react-native-biometrics": "^3.0.1",
    "react-native-camera": "^4.2.1",
    "react-native-chart-kit": "^6.12.0",
    "react-native-config": "^1.5.1",
    "react-native-device-info": "^10.11.0",
    "react-native-encrypted-storage": "^4.0.3",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "^2.14.1",
    "react-native-keychain": "^8.1.3",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-network-info": "^5.2.1",
    "react-native-orientation-locker": "^1.7.0",
    "react-native-permissions": "^4.1.1",
    "react-native-push-notification": "^8.1.1",
    "react-native-reanimated": "^3.6.2",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-svg": "^14.1.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-video": "^5.2.1",
    "react-native-webrtc": "^111.0.3",
    "react-redux": "^9.0.4",
    "redux": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "^0.73.18",
    "@react-native/eslint-config": "^0.73.1",
    "@react-native/metro-config": "^0.73.2",
    "@react-native/typescript-config": "^0.73.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "detox": "^20.13.5",
    "eslint": "^9.29.0",
    "jest": "^29.6.3",
    "jest-circus": "^29.6.3",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "redux-mock-store": "^1.5.4",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "surveillance",
    "ai",
    "mobile",
    "security",
    "camera",
    "alerts",
    "monitoring"
  ],
  "author": "Surveillance System Team",
  "license": "MIT"
}
